@{
    ViewData["Title"] = "Bindings";
    <link href="~/styles/style.css" rel="stylesheet" />
}
<div class="agile-right">
    @Html.ActionLink("Dodaj", "Create", "Account")
</div><div class="agile-right">
  @Html.ActionLink("gogle", "Index", "GoogleMap")
</div>
<div class="agile-center">
    <ol>
        <li>Cześć, Twoje ID to: @ViewBag.userId</</li>
        <li>Lista Twoich adresów: </li>
    </ol>
</div>
<div class="agile-center">
    <table>
        <tbody>
            @foreach (var address in ViewBag.addressesList)
            {

            <tr>
                    <td style="white-space:nowrap">>@address[0], @address[1]</td>
                <td>
                    <button type="button" class="btn aButton">
                        @Html.ActionLink(
                            "Szczegóły",
                            "Details",
                            "Account",
                            routeValues: new {
                                miejscowosc = @address[0],
                                ulica = @address[1]
                            },
                            htmlAttributes: null)
                        </button>
                </td> 
                <td>
                    <button type="button" class="btn aButton">
                        @Html.ActionLink(
                            "Usuń",
                            "Remove",
                            "Account",
                            routeValues: new {
                                id = @address[2],
                               
                            },
                            htmlAttributes: null)
                        </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>