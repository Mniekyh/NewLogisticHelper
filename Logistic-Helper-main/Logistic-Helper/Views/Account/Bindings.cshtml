<div class="agile-center">
    <ol>
        <li class = "fS15" >Cześć, Twoje ID to: @ViewBag.userId</</li>
        <li class = "fS15">Lista Twoich adresów: </li>
    </ol>
</div>
<div class="agile-center">
    <table>
        <tbody>
            @foreach (var address in ViewBag.addressesList)
            {
            <tr>
                    <td style="white-space:nowrap">>@address[0], @address[1]</td>
                <td>
                    <button type="button" class="btn  btnToChoose aButton">
                        @Html.ActionLink(
                            "Szczegóły",
                            "Details",
                            "Account",
                            routeValues: new {
                                miejscowosc = @address[0],
                                ulica = @address[1]
                            },
                            htmlAttributes: null)
                        </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>