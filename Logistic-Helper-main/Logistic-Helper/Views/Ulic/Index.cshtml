@using ServiceReference1
@{
    ViewData["Title"] = "Ulic";
}

<h1>Hej, łelkom na Ulicy</h1>




<div class = "container p-3">
    <div class = "row pt-4">
        <div class= "col-6">
            <h2 class = "text-primary">Ulic List</h2>

        </div>
        <div class= "col-6 text-end">
            <a asp-controller="Terc" asp-action= "Search" class = "btn btn-primary"> Search  Terc <i class="bi bi-plus-circle"></i></a>
            
        </div>
    </div>
    <br /><br/>
</div>

@model List<UlicaDrzewo>
 
    <div  id = "choosenStreet" class="bg-success">
        <form>
            <h2>@TempData["wojewodztwo"], @TempData["Powiat"], @TempData["nazwa"]</h2>
            <datalist id="countrydata">
                @foreach(var streets in Model )
                {
           
                    <option value =' @TempData["wojewodztwo"], @TempData["Powiat"], @TempData["nazwa"] @streets.Nazwa1'>@streets.Nazwa1</option>
                }
            </datalist>

            <label for="country">country</label>

        <input type="text" id = "inputId"
          list="countrydata"
          size="50"
          autocomplete="off" /> 
      </form>
           <button onclick = "getValue()">Submit</button>
   
    </div>
        <div id="output"></div>



