
@model User
@{
    ViewData["Title"] = "Delete";
}



<form method = "post">
    <div class = "border p-3 mt-4">
        <div class = "row pb-2">
            <h1 class = "text-primary">Delete User</h1>
            <hr />
        </div>



<div class = "mb-3">
            <label asp-for="LAST_NAME">LAST_NAME</label>
            <input asp-for = "LAST_NAME" class = "form-control"/>
            <span asp-validation-for="LAST_NAME" class= "text-danger"></span>
        </div>
             <div class = "mb-3">
            <label asp-for="NAME">NAME</label>
            <input asp-for = "NAME" class = "form-control"/>
            <span asp-validation-for="NAME" class= "text-danger"></span>

            <label asp-for="DATE_OF_BIRTH">Data Urodzenia</label>
            <input asp-for = "DATE_OF_BIRTH" type = "date" class = "form-control"/>
            <span asp-validation-for="DATE_OF_BIRTH" class= "text-danger"></span>

            <label asp-for="MAIL">Mail</label>
            <input asp-for = "MAIL" class = "form-control"/>
            <span asp-validation-for="MAIL" class= "text-danger"></span>

             <label asp-for="PHONE">PHONE</label>
            <input asp-for = "PHONE" class = "form-control"/>
            <span asp-validation-for="PHONE" class= "text-danger"></span>

            <button type= "submit" class = "btn btn-primary" style = "width:150px">Delete</button>
            <a asp-for="User" asp-action="Index" class = "btn btn-secondary" style ="width:150px">Back to List</a>
        </div>
    </div>

</form>

@*
Validation Client side*@
@section Scripts
{
    @{
        <partial name = "_ValidationScriptsPartial"/>
    }

}
