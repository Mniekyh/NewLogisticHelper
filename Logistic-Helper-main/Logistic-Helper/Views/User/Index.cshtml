@{
    ViewData["Title"] = "User";
}

<h1>Hej, łelkom na Useru</h1>




<div class = "container p-3">
    <div class = "row pt-4">
        <div class= "col-6">
            <h2 class = "text-primary">User List</h2>

        </div>
        <div class= "col-6 text-end">
            <a asp-controller="User" asp-action= "Create" class = "btn btn-primary"> Create New User <i class="bi bi-plus-circle"></i></a>

        </div>
    </div>
    <br /><br/>
</div>


@*Table which shows Category inside*@

<table class="table table-bordered table-stripped" style= "width:100%;">
    <thead>
        <tr>
            <th>
               ID
            </th>
            <th>
                LAST_NAME
            </th>
               <th>
               NAME
            </th>
            <th>
                Data Urodzenia
            </th>
               <th>
               Mail
            </th>
            <th>
                PHONE
            </th>
            <th>
                Edit
            </th>
              <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        Loop to get data from database
        @foreach(var obj in Model)
        {
            <tr>
                <td width= "10%">
                    @obj.ID
                </td>

                <td width= "10%">
                    @obj.LAST_NAME
                </td>
            
            
                <td width= "10%">
                    @obj.NAME

                </td>
                <td width= "20%">
                    @obj.DATE_OF_BIRTH
                </td>
            
            
                <td width= "20%">
                    @obj.MAIL

                </td>
                  <td width= "10%">
                    @obj.PHONE

                </td>
                <td  width= "10%" >
                    <div class = "w-75 btn-group" role = "group">
                        <a asp-controller = "User" asp-action ="Edit" asp-route-id="@obj.ID" class = "btn btn-primary">
                            <i class="bi bi-pen"></i> Edit</a>
                    </div>

                </td>

                <td  width= "10%" >
                    <div class = "w-75 btn-group" role = "group">
                        <a asp-controller = "User" asp-action ="Delete" asp-route-id="@obj.ID" class = "btn btn-danger">
                            <i class="bi bi-x-square"></i> Delete</a>
                    </div>

                </td>
          </tr>
        }
    </tbody>

</table>
